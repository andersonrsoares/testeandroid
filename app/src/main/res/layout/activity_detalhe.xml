<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.andersonsoares.madeiramadeirateste.DetalheActivity">




    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:elevation="6dp"
        app:title="Início"
        app:titleTextColor="#ffffff"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="tipo"
        android:id="@+id/tipo"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_centerVertical="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginStart="16dp"/>


    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="endreco"
        android:id="@+id/endereco"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_centerVertical="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginStart="16dp"/>

    <Button
        android:textColor="#ffffff"
        android:backgroundTint="#16A085"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
            android:text="Itens"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Instruções de entrega:"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:layout_centerVertical="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginStart="16dp"/>

    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/instrucoes"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_centerVertical="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginStart="16dp"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/acoes"
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="70dp">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_delivery_truck_silhouette"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="5dp"
                android:layout_height="1dp"></View>
            <RelativeLayout

                android:layout_weight="1"
                android:id="@+id/entrega"
                android:background="#58D68D"
                android:layout_width="wrap_content"
                android:layout_height="70dp">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_check_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="5dp"
                android:layout_height="1dp"></View>
            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/ausente"
                android:background="#E74C3C"
                android:layout_width="wrap_content"
                android:layout_height="70dp">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_clear_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/voltar"
            android:background="#F1C40F"
            android:layout_width="wrap_content"
            android:layout_height="70dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_black" />
        </RelativeLayout>
        <View
            android:layout_width="5dp"
            android:layout_height="1dp"></View>
        <RelativeLayout

            android:layout_weight="1"
            android:id="@+id/licacao"
            android:background="#5DADE2"
            android:layout_width="wrap_content"
            android:layout_height="70dp">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/ic_local_phone_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="5dp"
            android:layout_height="1dp"></View>
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/mapa"
            android:background="#7D3C98"
            android:layout_width="wrap_content"
            android:layout_height="70dp">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/ic_local_phone_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
